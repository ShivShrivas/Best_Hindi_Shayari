<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    tools:context=".TopicShayariActivity" >

    <include
        android:id="@+id/topic_shayari_app_bar"
        layout="@layout/app_bar_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></include>

    <ImageView
        android:id="@+id/topic_shayari_image"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_marginTop="108dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topic_shayari_app_bar"
        app:srcCompat="@drawable/dosti" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorLitePrimary"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/topic_shayari_image"
        app:layout_constraintTop_toBottomOf="@+id/topic_shayari_image">

        <Button
            android:id="@+id/topic_shayari_prev_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/text_color"
            android:drawableStart="@drawable/ic_previous_24"
            android:drawableTint="@color/button_text_color"
            android:fontFamily="@font/montserrat"
            android:text="Prev"
            android:textColor="@color/button_text_color" />

        <Button
            android:id="@+id/topic_shayari_fav_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/text_color"
            android:drawableStart="@drawable/ic_favorite_24"
            android:drawableTint="@color/button_text_color"
            android:fontFamily="@font/montserrat"
            android:text="Add to Fav"
            android:textColor="@color/button_text_color" />

        <Button
            android:id="@+id/topic_shayari_more_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/text_color"
            android:drawableStart="@drawable/ic_more_24"
            android:drawableTint="@color/button_text_color"
            android:fontFamily="@font/montserrat"
            android:text="More"
            android:textColor="@color/button_text_color" />

        <Button
            android:id="@+id/topic_shayari_next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/text_color"
            android:drawableEnd="@drawable/ic_next_24"
            android:drawableTint="@color/button_text_color"
            android:fontFamily="@font/montserrat"
            android:text="Next"
            android:textColor="@color/button_text_color" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/topic_shayari_image"
        app:layout_constraintTop_toTopOf="@+id/topic_shayari_image"
        app:srcCompat="@drawable/quote_icon" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:shadowColor="@color/colorPrimaryText"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:text="एक उमर बीत चली है तुझे चाहते हुए, \nतू आज भी बेखबर है कल की तरह।"
        android:textAlignment="center"
        android:textColor="@color/button_text_color"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/topic_shayari_image"
        app:layout_constraintEnd_toEndOf="@+id/topic_shayari_image"
        app:layout_constraintStart_toStartOf="@+id/topic_shayari_image"
        app:layout_constraintTop_toTopOf="@+id/topic_shayari_image" />

</androidx.constraintlayout.widget.ConstraintLayout>